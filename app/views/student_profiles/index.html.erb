<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>Students</h3>
    </div>
  </div>
</div>

<% @student_profiles.each_slice(4) do |student_profiles| %>
<div class="row">
  <% @student_profiles.each do |student_profile| %>
  <div class="col-md-4">
    <%= link_to student_profile do  %>
      <%= image_tag student_profile.photo.expiring_url(:thumb)%>
    </div>
  </div>
      <%= link_to student_profile.full_name, student_profile %> <br />
      <%= student_profile.high_school %>
      <% end %>
    <% end %>
  <% end %>



<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>High school</th>
      <th>Graduation year</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_profiles.each do |student_profile| %>
      <tr>
        <td><%= student_profile.first_name %></td>
        <td><%= student_profile.last_name %></td>
        <td><%= student_profile.gender %></td>
        <td><%= student_profile.high_school %></td>
        <td><%= student_profile.graduation_year %></td>
        <td><%= link_to 'Show', student_profile %></td>
        <td><%= link_to 'Edit', edit_student_profile_path(student_profile) %></td>
        <td><%= link_to 'Destroy', student_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <% if current_user.try(:student_profile).try(:fan_of?, student_profile) %>
          <%= link_to 'Stop being a Fan', stop_being_a_fan_student_profile_path(current_user.student_profile, other_profile_id: student_profile.to_param), method: :post %>
          <% elsif current_user.try(:student_profile).try(:id) != student_profile.id %>
          <%= link_to 'Become a Fan', become_a_fan_student_profile_path(current_user.student_profile, other_profile_id: student_profile.to_param), method: :post %>
          <% else %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student profile', new_student_profile_path %>
