<header class="background">
  <div class="container full-image">
    <div class="row">
      <div class="col-xs-5 col-xs-offset-7 hidden-xs">
        <h1 class="header-text">Your Future Starts Here</h1>
      </div>
      <div class="col-xs-12 visible-xs">
        <h4 class="small-screen-text">Your Future Starts Here</h1>
        </div>
    </div>
    <div class="row small-screen-padding">
      <div class="col-xs-offset-7 col-xs-1 col-sm-offset-5 col-sm-2 col-md-offset-7 col-md-1 btn-center hidden-xs">
        <%= link_to "Start Exploring", new_user_registration_path, :class => "btn btn-default btn-xlarge" %>
      </div>
      <div class="col-xs-4 btn-center btn-sm visible-xs">
        <%= link_to "Start Exploring", new_user_registration_path, :class => "btn btn-default btn-md btn-yellow" %>
      </div>
      <div class="col-xs-offset-1 col-xs-4 btn-center btn-sm visible-xs">
        <%= link_to "Continue Your Journey", new_user_session_path, :class => "btn btn-default btn-md btn-white home-btn-txt" %>
