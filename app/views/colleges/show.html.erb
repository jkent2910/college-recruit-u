<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h1 class="sub-text"><%= @college.name %></h1> 
    </div>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h4 class="college-text"><%= @college.city %>, <%= @college.state %></h4>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h4 class="college-text"><%= @college.region %></h4>
    </div>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h5 class="college-text"><%= @college.college_type %></h5>
    </div>
</div>

<div class="container">
  <%= render "shared/college_student_status" %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h4 class="sub-text">Fans: <%= @student_profile.college_student_statuses.where(status_name: "Just a Fan").count %></h4>
    </div>
    <div class="col-xs-5">
      <h4 class="sub-text">Considering: <%= @student_profile.college_student_statuses.where(status_name: "Considering").count %></h4>
    </div>
    <div class="col-xs-4">
      <h4 class="sub-text">Applying: <%= @student_profile.college_student_statuses.where(status_name: "Applying").count %></h4>
    </div>
  </div>
</div>

<div class="container">
  <h4 class="sub-text">Explore <%= @college.name %></h2>
  <ul class="nav nav-pills">
    <li class="active"><a data-toggle="pill" href="#home">Connect</a></li>
    <li><a data-toggle="pill" href="#menu1">Cost</a></li>
    <li><a data-toggle="pill" href="#menu2">Student</a></li>
    <li><a data-toggle="pill" href="#menu3">Application</a></li>
    <li><a data-toggle="pill" href="#menu4">Fun Facts</a></li>
  </ul>
  
  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <h3 class="college-text">Connect</h3>
        <div class="row">
          <% if @college.twitter %>
            <div class="col-xs-4 col-md-4 college-text">
              <%= link_to image_tag("social-icons/twitter_vector.png"), "http://www.twitter.com/"+@college.twitter %>
            </div>
          <% end %>
          <% if @college.facebook %>
            <div class="col-xs-4 col-md-4 college-text">
              <%= link_to image_tag("social-icons/facebook_vector.png"), "http:/www.facebook.com"+@college.facebook %>
            </div>
          <% end %>
          <% if @college.instagram %>
            <div class="col-xs-4 col-md-4 college-text">
              <%= link_to image_tag("social-icons/instagram_vector.jpg"), "http://www.instagram.com/"+@college.instagram %>
            </div>
          <% end %>
        </div>
        <div class="row"><br />
          <% if @college.admissions_rep_page %>
            <div class="col-xs-6 col-md-offset-1 col-md-4 col-md-offset-3">
              <%= link_to 'Find Your Admissions Rep', @college.admissions_rep_page, class: "btn btn-default" %>
            </div>
          <% end %>
          <% if @college.college_visit_page %>
            <div class="col-xs-5 col-xs-offset-1 col-md-2">
              <%= link_to 'Schedule a Visit', @college.college_visit_page, class: "btn btn-default" %>
            </div>
          <% end %>
        </div>
    </div>
    <div id="menu1" class="tab-pane fade">
      <div class="row">
        <div class="col-xs-12">
          <h2 class="college-text">Cost</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-4">
          <h5><strong>In-state tuition:</strong> <%= @college.in_state_tuition %></h5>
          <h5><strong>Out-of-state tuition:</strong> <%= @college.out_of_state_tuition %></h5>
          <h5><strong>Receiving Financial Aid: </strong><%= @college.percent_receive_financial_aid %>%</h5>
        </div>
      </div>
    </div>
    <div id="menu2" class="tab-pane fade">
      <div class="row">
        <div class="col-xs-12">
          <h2 class="college-text">Typical Student</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-4">
          <%= image_tag("malefemale.jpg") %>
        </div>
        <div class="col-xs-6 col-xs-offset-2">
          <p><strong>Average GPA:</strong> <%= @college.avg_gpa %></p>
          <p><strong>Average SAT:</strong><%= @college.avg_sat %></p>
          <p><strong>Average ACT:</strong> <%= @college.avg_act %></p>
          <p><strong>% Minority: </strong><%= @college.percent_minority %></p>
          <p><strong>% Int'l:</strong> <%= @college.percent_international %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-4">
          <p><strong><%= @college.percent_female %>%</strong></p>
        </div>
        <div class="col-xs-4">
          <p><strong><%= @college.percent_male %>%</strong></p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <p><strong>Popular Majors:</strong> <%= @college.popular_majors %></p>
        </div>
      </div>
    </div>
    <div id="menu3" class="tab-pane fade">
      <div class="row">
        <div class="col-xs-12">
          <h2 class="college-text">Application</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-4">
          <%= image_tag("essay.svg", class: "img-thumbnail") %>
        </div>
        <div class="col-xs-4">
          <%= image_tag("essay.svg", class: "img-thumbnail") %>
        </div>
        <div class="col-xs-4">
          <%= image_tag("essay.svg", class: "img-thumbnail") %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-4">
          <p><%= @college.number_of_essays %> Essays </p>
        </div>
        <div class="col-xs-4">
          <p><%= @college.number_of_recommendations %> Rec's </p>
        </div>
        <div class="col-xs-4">
          <p>ACT Score</p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <h5>Early Admissions Deadline: <%= @college.early_admissions_deadline %></h4>
          <h5>Regular Admissions Deadline: <%= @college.fall_deadline %></h4>
        </div>
      </div>
    </div>
    <div id="menu4" class="tab-pane fade">
      <div class="row">
        <div class="col-xs-12">
          <h2 class="college-text">Fun Facts</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <%= image_tag("missing.png", class: "img-thumbnail") %>
        </div>
        <div class="col-xs-9 col-xs-offset-3">
          <h4><%= @college.notable_alumni %></h4>
        </div>
      </div>
    </div>
  </div>
</div><br />

<%= link_to 'Browse Colleges', colleges_path, class: "btn btn-success btn-sm" %>
