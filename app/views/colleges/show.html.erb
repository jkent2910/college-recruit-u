<div class="container">
  <div class="row college-name-and-logo">
    <div class="col-xs-8 col-md-6 col-md-offset-2">
      <h1 class="small-screen-text-black"><%= @college.name%></h1>
    </div>
    <div class="col-xs-4 col-md-2">
      <%= image_tag(@college.logo(:thumb)) %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-11 col-xs-offset-1 col-md-4 col-md-offset-4 centered">
      <% @college.photos.each do |photos| %>
      <%= image_tag(photos.photo(:medium)) %>
      <% end %>
  </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h4 class="sub-text-centered"><span class="glyphicon glyphicon-globe glyphicon-xs-black"></span><%= @college.city %>, <%= @college.state %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h5 class="sub-text-centered"><%= @college.region %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h5 class="sub-text-centered"><%= @college.college_type %></h5>
    </div>
  </div>
</div>

<div class="container">
  <%= render "shared/college_student_status" %>
</div>

<div class="container">
  <div class="row college-show-students">
    <div class="col-xs-3 col-md-4 centered">
      <h4 class="sub-text-blue"><span class="glyphicon glyphicon-sunglasses glyphicon-sm-blue"></span> Fans: <%= @college.fans.count %></h4>
        <% @college.fans.each do |student_profile| %>
          <%= link_to image_tag(student_profile.photo(:thumb), title: student_profile.full_name), student_profile_path(student_profile)  %>
        <% end %>
    </div>
    <div class="col-xs-5 col-md-4 centered">
      <h4 class="sub-text-blue"><span class="glyphicon glyphicon-zoom-in glyphicon-sm-blue"></span> Considering: <%= @college.considering.count %></h4>
        <% @college.considering.each do |student_profile| %>
          <%= link_to image_tag(student_profile.photo(:thumb), title: student_profile.full_name), student_profile_path(student_profile)  %>
        <% end %>
    </div>
    <div class="col-xs-4 col-md-4 centered">
      <h4 class="sub-text-blue"><span class="glyphicon glyphicon-file glyphicon-sm-blue"></span> Applying: <%= @college.applying.count %></h4>
        <% @college.applying.each do |student_profile| %>
          <%= link_to image_tag(student_profile.photo(:thumb), title: student_profile.full_name), student_profile_path(student_profile)  %>
        <% end %>
    </div>
  </div>
  <div class="row college-show-students">
    <div class="col-xs-3">
      <h4 class="sub-text">Future Alumni: <%= @college.enrolling.count %></h4>
      <% @college.enrolling.each do |student_profile| %>
        <%= link_to image_tag(student_profile.photo(:thumb), title: student_profile.full_name), student_profile_path(student_profile) %>
        <% end %>
    </div>
  </div>
  <br />
</div>

<div class="container">
  <div class="row boxed-text">
    <div class="col-xs-12">
      <h4 class="sub-text">Learn About <%= @college.name %></h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-offset-4 col-md-8 centered">
      <ul class="nav nav-pills">
        <li class="active"><a data-toggle="pill" href="#home">Connect</a></li>
        <li><a data-toggle="pill" href="#menu1">Cost</a></li>
        <li><a data-toggle="pill" href="#menu2">Student</a></li>
        <li><a data-toggle="pill" href="#menu3">Application</a></li>
      </ul>
    </div>
  </div>
  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <div class="row">
        <% if @college.twitter %>
          <div class="col-xs-4 col-md-offset-3 col-md-1 college-text">
            <%= link_to image_tag("social-icons/twitter_vector.png"), "http://www.twitter.com/"+@college.twitter %>
          </div>
        <% end %>
        <% if @college.facebook %>
          <div class="col-xs-4 col-md-offset-1 col-md-1 college-text">
            <%= link_to image_tag("social-icons/facebook_vector.png"), "http:/www.facebook.com"+@college.facebook %>
          </div>
        <% end %>
        <% if @college.instagram %>
          <div class="col-xs-4 col-md-offset-1 col-md-1 college-text">
            <%= link_to image_tag("social-icons/instagram_vector.jpg"), "http://www.instagram.com/"+@college.instagram %>
          </div>
        <% end %>
      </div>
      <div class="row"><br />
        <% if @college.admissions_rep_page %>
          <div class="col-xs-6 col-md-offset-4 col-md-1 centered">
            <%= link_to 'Find Your Admissions Rep', @college.admissions_rep_page, class: "btn btn-default" %>
          </div>
        <% end %>
        <% if @college.college_visit_page %>
          <div class="col-xs-5 col-xs-offset-1 col-md-offset-1 col-md-2 centered">
            <%= link_to 'Schedule a Visit', @college.college_visit_page, class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div><br />

    <div id="menu1" class="tab-pane fade">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3 centered">
          <span class="glyphicon glyphicon-usd glyphicon-sm-blue"></span><span class="glyphicon glyphicon-usd glyphicon-sm-blue"></span>
          <% if @college.in_state_tuition != ""  %>
            <h5 class="sub-text-centered"><strong>In-state tuition:</strong> <%= @college.in_state_tuition %></h5>
          <% end %>
          <% if @college.out_of_state_tuition != ""  %>
            <h5 class="sub-text-centered"><strong>Out-of-state tuition:</strong> <%= @college.out_of_state_tuition %></h5>
          <% end %>
          <% if @college.percent_receive_financial_aid != "" %>
            <h5 class="sub-text-centered"><strong>Receiving Financial Aid: </strong><%= @college.percent_receive_financial_aid %></h5>
          <% end %>
          <% if @college.financial_aid_link %>
            <div class="col-xs-12 col-md-6 col-md-offset-3 centered">
              <%= link_to 'Find Scholarships', @college.financial_aid_link, class: "btn btn-default" %>
            </div>
          <% end %>
        </div>
      </div><br />
    </div>

    <div id="menu2" class="tab-pane fade">
      <div class="row">
        <div class="col-xs-12">
          <% if @college.percent_female != "" %>
            <h5 class="sub-text-centered"><strong>Female:</strong> <%= @college.percent_female %></h5>
          <% end %>
          <% if @college.percent_male != "" %>
            <h5 class="sub-text-centered"><strong>Male:</strong> <%= @college.percent_male %></h5>
          <% end %>
        </div>
        <div class="col-xs-6 col-xs-offset-3 col-md-6 col-md-offset-3 centered">
          <%= image_tag("male-female-symbols.jpg", height: 100, width: 150)%>
        </div>
        <div class="col-xs-12">
          <% if @college.avg_gpa != "" %>
            <h5 class="sub-text-centered"><strong>Average GPA: </strong><%= @college.avg_gpa %></h5>
          <% end %>
          <% if @college.avg_sat != ""  %>
            <h5 class="sub-text-centered"><strong>Average SAT: </strong><%= @college.avg_sat %></h5>
          <% end %>
          <% if @college.avg_act != ""  %>
            <h5 class="sub-text-centered"><strong>Average ACT: </strong> <%= @college.avg_act %></h5>
          <% end %>
          <% if @college.percent_minority != ""  %>
            <h5 class="sub-text-centered"><strong>% Minority: </strong><%= @college.percent_minority %></h5>
          <% end %>
          <% if @college.percent_international != ""  %>
            <h5 class="sub-text-centered"><strong>% Int'l: </strong> <%= @college.percent_international %></h5>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <% if @college.popular_majors != ""  %>
          <h5 class="sub-text-centered"><strong>Popular Majors:</strong> <%= @college.popular_majors %></h5>
          <% end %>
        </div>
      </div>
      <div class="col-xs-12 col-md-6 col-md-offset-3 centered">
        <%= link_to_if @college.link_to_majors.present?, 'See List of Majors', @college.link_to_majors, class: "btn btn-default" %>
      </div>
    </div>

    <div id="menu3" class="tab-pane fade">
      <div class="row">
        <div class="col-xs-6 col-md-3 col-md-offset-3 centered">
          <%= image_tag("essay.svg", class: "img-responsive essay-icon") %>
        </div>
        <div class="col-xs-6 col-md-3 centered">
          <%= image_tag("essay.svg", class: "img-responsive essay-icon") %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-6 col-md-3 col-md-offset-3 ">
          <h5 class="sub-text-centered"><%= @college.number_of_essays %> Essays </h5>
        </div>
        <div class="col-xs-6 col-md-3 ">
          <h5 class="sub-text-centered"><%= @college.number_of_recommendations %> Rec's </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 centered">
          <button type="button" class="btn btn-default" data-toggle="modal" data-target=".bs-app-help-modal">Get Personalized Help With Your Application</button>

            <div class="modal fade bs-app-help-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
              <div class="modal-dialog modal-sm">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title" id="gridSystemModalLabel">What can we help you with?</h4>
                  </div>
                  <div class="modal-body">
                    <p>Review an essay?  Answer a question?  Let us know, we're here to help you!</p>
                    <%= form_tag application_help_college_path(@college), id: "application-help-form" do %>
                    <%= text_area_tag :question, nil, rows: 5 %>
                    <% end %>
                </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="application-help-btn">Send</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <div class="row">
        <div class="col-xs-12 centered">
          <h5 class="college-text">Early Admissions Deadline: <%= @college.early_admissions_deadline %></h4>
          <h5 class="college-text">Regular Admissions Deadline: <%= @college.fall_deadline %></h4>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-12">
        <h5 class="sub-text-centered"><span class="glyphicon glyphicon-question-sign glyphicon-xs-black"></span>Still can't find what you're looking for?  Ask a current student or admissions rep a question!</h5>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3 centered">
        <button type="button" class="btn btn-default" data-toggle="modal" data-target=".bs-ask-question-modal">Ask a Question</button>
          <div class="modal fade bs-ask-question-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
            <div class="modal-dialog modal-sm">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title" id="gridSystemModalLabel">Let us connect you with an admissions rep or student!</h4>
                </div>
                <div class="modal-body">
                  <p>Type your question below</p>
                  <%= form_tag ask_question_college_path(@college), id: "send-question-form" do %>
                  <%= text_area_tag :question, nil, rows: 5 %>
                  <% end %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary" id="send-question-btn">Send</button>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>

  <div class="row">
    <% if @college.notable_alumni? %><br />
    <div class="col-xs-12 centered">
      <h4 class="sub-text-centered"><span class="glyphicon glyphicon-king glyphicon-xs-black"></span>Famous Alumni</h2>
    </div>
    <div class="col-xs-12 centered">
      <h4 class="sub-text-centered"><%= @college.notable_alumni %></h4>
    </div>
    <% end %>
  </div>
</div>
<br />

<div class="links-container">
  <%= link_to 'Browse Colleges', colleges_path, class: "btn btn-success btn-md" %>
</div>

<script>
 $(function () {
     $("button#send-question-btn").click(
         function() {
             $("form#send-question-form").submit();
         }
     );
     $("button#application-help-btn").click(
         function() {
             $("form#application-help-form").submit();
         }
     )
 }());
</script>
