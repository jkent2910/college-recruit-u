<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h1 class="sub-text"><%= @college.name%></h1>
    </div>
    <div class="col-xs-4">
      <%= image_tag(@college.logo(:thumb)) %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-11 col-xs-offset-1">
      <% @college.photos.each do |photos| %>
        <%= image_tag(photos.photo(:medium)) %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h4 class="college-text"><%= @college.city %>, <%= @college.state %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h5 class="college-text"><%= @college.region %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h5 class="college-text"><%= @college.college_type %></h5>
    </div>
  </div>
</div>

<div class="container">
  <%= render "shared/college_student_status" %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h4 class="sub-text">Fans: <%= @student_profile.college_student_statuses.where(status_name: "Just a Fan").count %></h4>
        <% @student_profile.college_student_statuses.where(status_name: "Just a Fan").each do |student_profile| %>
          <%= image_tag(@student_profile.photo(:thumb)) %>
        <% end %>
    </div>
    <div class="col-xs-5">
      <h4 class="sub-text">Considering: <%= @student_profile.college_student_statuses.where(status_name: "Considering").count %></h4>
        <% @student_profile.college_student_statuses.where(status_name: "Considering").each do |student_profile| %>
          <%= image_tag(@student_profile.photo(:thumb)) %>
        <% end %>
    </div>
    <div class="col-xs-4">
      <h4 class="sub-text">Applying: <%= @student_profile.college_student_statuses.where(status_name: "Applying").count %></h4>
        <% @student_profile.college_student_statuses.where(status_name: "Applying").each do |student_profile| %>
          <%= image_tag(@student_profile.photo(:thumb)) %>
        <% end %>
    </div>
  </div>
</div><br />

<div class="container">
  <div class="row boxed-text">
    <div class="col-xs-12">
      <h4 class="sub-text">Learn About <%= @college.name %></h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <ul class="nav nav-pills">
        <li class="active"><a data-toggle="pill" href="#home">Connect</a></li>
        <li><a data-toggle="pill" href="#menu1">Cost</a></li>
        <li><a data-toggle="pill" href="#menu2">Student</a></li>
        <li><a data-toggle="pill" href="#menu3">Application</a></li>
      </ul>
  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <div class="row">
        <% if @college.twitter %>
          <div class="col-xs-4 col-md-4 college-text">
            <%= link_to image_tag("social-icons/twitter_vector.png"), "http://www.twitter.com/"+@college.twitter %>
          </div>
        <% end %>
        <% if @college.facebook %>
          <div class="col-xs-4 col-md-4 college-text">
            <%= link_to image_tag("social-icons/facebook_vector.png"), "http:/www.facebook.com"+@college.facebook %>
          </div>
        <% end %>
        <% if @college.instagram %>
          <div class="col-xs-4 col-md-4 college-text">
            <%= link_to image_tag("social-icons/instagram_vector.jpg"), "http://www.instagram.com/"+@college.instagram %>
          </div>
        <% end %>
      </div>
      <div class="row"><br />
        <% if @college.admissions_rep_page %>
          <div class="col-xs-6 col-md-offset-1 col-md-4 col-md-offset-3">
            <%= link_to 'Find Your Admissions Rep', @college.admissions_rep_page, class: "btn btn-default" %>
          </div>
        <% end %>
        <% if @college.college_visit_page %>
          <div class="col-xs-5 col-xs-offset-1 col-md-2">
            <%= link_to 'Schedule a Visit', @college.college_visit_page, class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div><br />

    <div id="menu1" class="tab-pane fade">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-4">
          <h5 class="college-text"><strong>In-state tuition:</strong> <%= @college.in_state_tuition %></h5>
          <h5 class="college-text"><strong>Out-of-state tuition:</strong> <%= @college.out_of_state_tuition %></h5>
          <h5 class="college-text"><strong>Receiving Financial Aid: </strong><%= @college.percent_receive_financial_aid %></h5>
          <% if @college.financial_aid_link %>
            <div class="col-xs-8 col-xs-offset-3">
              <%= link_to 'Find Scholarships', @college.financial_aid_link, class: "btn btn-default" %>
            </div>
          <% end %>
        </div>
      </div><br />
    </div>

    <div id="menu2" class="tab-pane fade">
      <div class="row">
        <div class="col-xs-12">
          <h5 class="college-text"><strong>Female:</strong> <%= @college.percent_female %></h5>
          <h5 class="college-text"><strong>Male:</strong> <%= @college.percent_male %></h5>
        </div>
        <div class="col-xs-6 col-xs-offset-3">
          <%= image_tag("male-female-symbols.jpg", height: 100, width: 150)%>
        </div>
        <div class="col-xs-12">
          <h5 class="college-text"><strong>Average GPA: </strong><%= @college.avg_gpa %></h5>
          <h5 class="college-text"><strong>Average SAT: </strong><%= @college.avg_sat %></h5>
          <h5 class="college-text"><strong>Average ACT: </strong> <%= @college.avg_act %></h5>
          <h5 class="college-text"><strong>% Minority: </strong><%= @college.percent_minority %></h5>
          <h5 class="college-text"><strong>% Int'l: </strong> <%= @college.percent_international %></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <h5 class="college-text"><strong>Popular Majors:</strong> <%= @college.popular_majors %></h5>
        </div>
      </div>
      <div class="col-xs-8 col-xs-offset-3">
        <%= link_to 'See List of Majors', @college.link_to_majors, class: "btn btn-default" %>
      </div>
    </div>
    <div id="menu3" class="tab-pane fade">
      <div class="row">
        <div class="col-xs-6">
          <%= image_tag("essay.svg", class: "img-responsive") %>
        </div>
        <div class="col-xs-6">
          <%= image_tag("essay.svg", class: "img-responsive") %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-6">
          <h5 class="college-text"><%= @college.number_of_essays %> Essays </h5>
        </div>
        <div class="col-xs-6">
          <h5 class="college-text"><%= @college.number_of_recommendations %> Recommendations </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <button type="button" class="btn btn-default" data-toggle="modal" data-target=".bs-example-modal-sm">Get Personalized Help With Your Application</button>

            <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
              <div class="modal-dialog modal-sm">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title" id="gridSystemModalLabel">We will be in touch soon!</h4>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <h5 class="college-text">Early Admissions Deadline: <%= @college.early_admissions_deadline %></h4>
          <h5 class="college-text">Regular Admissions Deadline: <%= @college.fall_deadline %></h4>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h5 class="college-text">Still can't find what you're looking for?  Ask a current student or admissions rep a question!</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-10">
        <div class="col-xs-8 col-xs-offset-4">
          <button type="button" class="btn btn-default" data-toggle="modal" data-target=".bs-example-modal-sm">Ask a Question</button>

            <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
              <div class="modal-dialog modal-sm">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title" id="gridSystemModalLabel">We will be in touch soon!</h4>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <h4 class="sub-text">Famous Alumni</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h4 class="college-text"><%= @college.notable_alumni %></h4>
    </div>
  </div>
</div>
</div>
<br />

<%= link_to 'Browse Colleges', colleges_path, class: "btn btn-success btn-sm" %>
